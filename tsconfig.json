{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "glee/glee.config.js",
    "glee/functions/test.ts",
    "glee.config.js"
  ],
  "exclude": [
    "node_modules",
    ".glee"
  ]
}
